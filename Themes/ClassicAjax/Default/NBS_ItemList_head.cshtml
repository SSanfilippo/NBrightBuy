@using DotNetNuke.Entities.Users
@inherits NBrightBuy.render.NBrightBuyRazorTokens<NBrightDNN.NBrightRazor>

@RenderTemplate("\\DesktopModules\\NBright\\NBrightBuy\\Themes\\ClassicAjax\\Default\\NBS_ProductDisplayList_head.cshtml",Model)

<link href="/DesktopModules/NBright/NBrightBuy/Themes/ClassicAjax/css/ClientAccount.css" rel="stylesheet">

<script type="text/javascript">
    $(document).ready(function () {

        $(document).on("nbxgetcompleted", ItemList_GetList_nbxgetCompleted);

        $('.processing').show();
        nbxget('product_ajaxview_getlist', '#nbs_productajaxview', '#nbs_ajaxproducts');

    });

    function ItemList_GetList_nbxgetCompleted(e) {

        if (e.cmd == 'product_ajaxview_getlist') {
            
            $('.wishlistremoveall').unbind("click");
            $('.wishlistremoveall').click(function () {
                $('#shoplistname').val($(this).attr('listkey'));
                nbxget('itemlist_deletelist', '#nbs_productajaxview', '#nbs_ajaxproducts');
            });

            $("#accordion").accordion();
        }

        $('.processing').hide();
    }

</script>
